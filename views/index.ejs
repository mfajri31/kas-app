<%- include('partials/header.ejs') %>

  <div class="row mt-4">
    <div class="col-lg-12">
      <h4>Uang Masuk</h4>

      <a href="/tambah" class="btn btn-primary btn-sm float-end mb-1">Tambah Transaksi</a>

      <table class="table table-bordered table-hover">
        <thead class="bg-primary text-white">
          <tr>
            <th class="text-center">#</th>
            <th>Sumber Dana</th>
            <th>Nominal</th>
            <th>Tanggal</th>
            <th width="20%" class="text-center">Action</th>
          </tr>
        </thead>
        <tbody>
          <% let number=1; %>
            <% uangMasuk.forEach(function(um){ %>
              <tr>
                <td class="text-center">
                  <%= number++ %>
                </td>
                <td>
                  <%= um.sumber_dana %>
                </td>
                <td>
                  <%= um.nominal %>
                </td>
                <td>
                  <%= um.tanggal %>
                </td>
                <td class="text-center">
                  <a href="/edit/<%= um._id %>" class="btn btn-success btn-sm">Edit</a>
                  <a href="/hapus/<%= um._id %>" onclick="return confirm('Yakin ingin dihapus?')"
                    class="btn btn-danger btn-sm">Hapus</a>
                </td>
              </tr>
              <% }) %>
        </tbody>
      </table>
    </div>
  </div>

  <%- include('partials/footer.ejs') %>